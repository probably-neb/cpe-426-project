CRYPTO_LIB = micro-ecc

VPATH += :$(FIRMWAREPATH)/crypto/$(CRYPTO_LIB)/
EXTRAINCDIRS += $(FIRMWAREPATH)/crypto/$(CRYPTO_LIB)/

#SRC += uECC.c

# support secp256r1 only for PoC
CDEFS += -DuECC_SUPPORTS_secp160r1=0 -DuECC_SUPPORTS_secp192r1=0 -DuECC_SUPPORTS_secp224r1=0 -DuECC_SUPPORTS_secp256k1=0 -DuECC_SUPPORTS_secp256r1=1
CDEFS += -DuECC_ENABLE_VLI_API
CDEFS += -DuECC_PLATFORM=uECC_arm
CDEFS += -DuECC_OPTIMIZATION_LEVEL=4
#CDEFS += -DuECC_SQUARE_FUNC
